<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/main_bar"
            layout="@layout/app_bar">

        </include>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v4.view.ViewPager>


    </LinearLayout>


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorBackNav"
        android:orientation="vertical">

        <include
            android:id="@+id/main_bar_left"
            layout="@layout/nav_header">

        </include>


        <Button
            android:id="@+id/thripitaka_Button_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="ත්‍රිපිටකය"
            android:textColor="#744308"
            android:textSize="18sp" />

        <Button
            android:id="@+id/search_Button_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:padding="10dp"
            android:text="ත්‍රිපිටකය සෙවීම  "
            android:textColor="#744308"
            android:textSize="18sp"
            android:background="@drawable/round_coners"/>


        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:padding="5dp">

        </ListView>

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:hint="Search Suthra"
            android:inputType="text"
            android:padding="5dp"
            android:background="@drawable/round_coners"/>

        <TextView
            android:id="@+id/searchBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <ListView
            android:layout_gravity="top"
            android:id="@+id/listV"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp" />


        <!--<ExpandableListView-->
        <!--android:visibility="gone"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:id="@+id/expList"-->
        <!--android:groupIndicator="@null"-->
        <!--android:layout_height="fill_parent">-->
        <!--</ExpandableListView>-->

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Right_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/colorBackNav"
        android:orientation="vertical">

        <include
            android:id="@+id/main_bar_right"
            layout="@layout/nav_header">

        </include>

        <EditText
            android:id="@+id/searchBar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:hint="Search Dictionary..."
            android:inputType="text"
            android:padding="5dp"
            android:background="@drawable/round_coners"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/searchBar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:padding="5dp"
            android:textColor="#F7F9F9"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/language"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:popupBackground="#FAAC58">

        </Spinner>
        <!--<com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner-->
            <!--android:id="@+id/language"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:hint="language"-->
            <!--android:textColorHint="#05ab9a"-->
             <!--/>-->
        <!--<com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner-->
            <!--android:id="@+id/dictionary"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:hint="dictionary"-->
            <!--android:textColorHint="#05ab9a"-->
            <!--/>-->

        <Spinner
            android:id="@+id/dictionary"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:popupBackground="#FAAC58"
            >

        </Spinner>

        <ListView
            android:layout_gravity="top"
            android:id="@+id/listV2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"

            android:background="#FAAC58"/>




    </LinearLayout>


</android.support.v4.widget.DrawerLayout>

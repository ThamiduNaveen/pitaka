<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentSearch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/toolbar"
            android:background="@color/colorPrimaryDark"
            tools:targetApi="lollipop">

            <EditText
                android:id="@+id/text_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="සෙවීම"/>

        </Toolbar>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/preview"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:gravity="center_vertical|center"
                android:padding="5dp"
                android:background="@drawable/round_corners_white"
                android:textStyle="italic"
                android:text="සෙවීම"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/paaliS"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:text="පාලි සෙවීම"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="#744308"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:background="@drawable/round_coners"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/sinhalaS"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:text="සිංහල සෙවීම"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:textColor="#744308"
                    android:textAlignment="center"
                    android:background="@drawable/round_coners"
                    android:textSize="18sp" />


            </RelativeLayout>



        </android.support.v7.widget.LinearLayoutCompat>



        <ExpandableListView
            android:id="@+id/listExView"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </ExpandableListView>

    </LinearLayout>




</RelativeLayout>
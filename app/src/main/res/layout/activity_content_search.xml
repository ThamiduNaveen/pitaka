<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentSearch">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimaryDark"
        tools:targetApi="lollipop">

        <EditText
            android:id="@+id/text_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Search Content"/>

    </Toolbar>

    <TextView
        android:id="@+id/preview"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="55dp"/>

    <Button
        android:id="@+id/paaliS"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:padding="10dp"
        android:text="Paali"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="75dp"
        android:textColor="#744308"
        android:textAlignment="center"
        android:background="@drawable/round_coners"
        android:textSize="10sp" />

    <Button
        android:id="@+id/sinhalaS"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:padding="10dp"
        android:text="Sinhala"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="75dp"
        android:textColor="#744308"
        android:textAlignment="center"
        android:background="@drawable/round_coners"
        android:textSize="10sp" />

    <ExpandableListView
        android:id="@+id/listExView"
        android:layout_marginTop="110dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </ExpandableListView>


</RelativeLayout>